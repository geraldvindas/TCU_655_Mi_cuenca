<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include android:id="@+id/titulo_menu"
        layout="@layout/titulo_menu"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <Button
        style="@style/LinkButton"
        android:id="@+id/facebook"
        android:text="Página de Facebook"
        android:onClick="goToFacebook"
        android:drawableStart="@drawable/fb_logo"/>

    <Button
        style="@style/LinkButton"
        android:id="@+id/youtube"
        android:text="Video"
        android:onClick="goToYoutube"
        android:drawableStart="@drawable/yotube_logo"/>


    <Button
        style="@style/LinkButton"
        android:id="@+id/descargar"
        android:text="Libros de Gestión comunitaria del agua"
        android:onClick="goToDescarga"
        android:drawableStart="@drawable/download_logo"/>



</LinearLayout>