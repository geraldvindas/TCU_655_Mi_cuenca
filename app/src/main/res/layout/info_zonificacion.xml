<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/infoZonificacion"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include android:id="@+id/titulo_menu"
        layout="@layout/titulo_menu"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titulo_menu"
        android:orientation="vertical">

        <TextView
            style="@style/TextViewHeader1"
            android:id="@+id/tv_titulo_zonificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:text="Definición zonificación"
            android:layout_margin="10dp"/>

        <LinearLayout

            android:id="@+id/layout_descripcion"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:padding="10dp">
            <TextView
                style="@style/TextViewHeader2"
                android:id="@+id/text_descripcion"
                android:text="Descripción: " />

            <TextView
                style="@style/TextViewDescription"
                android:id="@+id/text_infoDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_actividad"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_below="@+id/layout_descripcion"
            android:padding="10dp">

            <TextView
                style="@style/TextViewHeader2"
                android:id="@+id/text_actividad"
                android:text="Actividad: " />

            <TextView
                style="@style/TextViewDescription"
                android:id="@+id/text_infoActividad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_imagen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">


            <ImageView
                android:id="@+id/imageView_imgZona"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/zonif_ejm" />

        </LinearLayout>
    </LinearLayout>





</RelativeLayout>