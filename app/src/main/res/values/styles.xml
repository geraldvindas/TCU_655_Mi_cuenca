<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewHeader1">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewHeader2">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewHeader3">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewHeaderList">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewDescription">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextViewDescriptionList">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextViewNextButton">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextViewMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">80dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextViewMenuTitle">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

    <style name="ImageViewMenu">
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:contentDescription">Imagen menu</item>
    </style>
</resources>
